{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["../node_modules/@types", "./node_modules/@types"],
    "outDir": "./dist"
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src"],
  "exclude": ["dist"]
}
